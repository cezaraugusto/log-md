{
  "version": "0.5.0-0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "deploy": "yarn prepare && np --no-2-fa"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "log-md",
  "author": {
    "name": "Cezar Augusto",
    "email": "boss@cezaraugusto.net",
    "url": "https://cezaraugusto.net"
  },
  "description": "Output Markdown using console.log for CLI",
  "module": "dist/log-md.esm.js",
  "size-limit": [
    {
      "path": "dist/log-md.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/log-md.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "chalk": "^5.0.0",
    "dedent": "^0.7.0",
    "marked": "^4.0.12",
    "marked-terminal": "^5.1.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/dedent": "^0.7.0",
    "@types/marked": "^4.0.2",
    "@types/marked-terminal": "^3.1.3",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "keywords": [
    "console",
    "log",
    "markdown",
    "pretty",
    "print",
    "terminal",
    "iterm",
    "iterm2",
    "cmd",
    "cmdline",
    "cli",
    "stdout",
    "stdinfo",
    "stderr"
  ]
}
